{
  "name": "sumotube",
  "version": "5.1.0",
  "description": "Cross-OS local YouTube-like video browser",
  "author": {
    "name": "Drafty Sumo",
    "email": "draftysumo@outlook.com"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-linux": "electron-builder build --linux --x64 --arm64",
    "build-win": "electron-builder build --win nsis --x64 --arm64 --publish never"
  },
  "build": {
    "appId": "com.draftysumo.SumoTube",
    "productName": "SumoTube",
    "files": [
      "**/*",
      "assets/icons/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "icon": "assets/icons/icon.ico",
      "publisherName": "Drafty Sumo",
      "publish": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "icon": "assets/icons/icon.png",
      "category": "AudioVideo",
      "executableName": "SumoTube"
    }
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^11.0.2"
  }
}
